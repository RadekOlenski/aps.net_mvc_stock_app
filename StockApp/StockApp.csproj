<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <CodeAnalysisRuleSet>../Ruleset.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JavaScriptEngineSwitcher.Extensions.MsDependencyInjection" Version="3.24.1"/>
        <PackageReference Include="JavaScriptEngineSwitcher.V8" Version="3.24.2"/>
        <PackageReference Include="JavaScriptEngineSwitcher.V8.Native.win-x64" Version="3.24.2"/>
        <PackageReference Include="NUnit" Version="4.1.0"/>
        <PackageReference Include="React.AspNet" Version="5.2.12"/>
        <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.556">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <AdditionalFiles Include="../stylecop.json"/>
        <AdditionalFiles Include="../Ruleset.ruleset"/>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\.github\workflows\build.yml">
        <Link>.github\workflows\build.yml</Link>
      </Content>
      <Content Include="..\.husky\commit-msg">
        <Link>.husky\commit-msg</Link>
      </Content>
      <Content Include="..\.husky\task-runner.json">
        <Link>.husky\task-runner.json</Link>
      </Content>
      <Content Include="..\.husky\_\.gitignore">
        <Link>.husky\_\.gitignore</Link>
      </Content>
      <Content Include="..\.husky\_\husky.sh">
        <Link>.husky\_\husky.sh</Link>
      </Content>
      <Content Include="..\.scripts\lint_commit_message.csx">
        <Link>.scripts\lint_commit_message.csx</Link>
      </Content>
    </ItemGroup>

</Project>
